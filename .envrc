# Locate the custom Qt installation
export QT_DIR="$HOME/Qt/6.10.1/gcc_64"
export PATH="$QT_DIR/bin:$PATH"
export LD_LIBRARY_PATH="$QT_DIR/lib:$LD_LIBRARY_PATH"

# Locate the custom VTK installation (UPDATED PATH)
export VTK_DIR="$HOME/sdk/vtk-qt6/lib/cmake/vtk-9.5"
export LD_LIBRARY_PATH="$HOME/sdk/vtk-qt6/lib:$LD_LIBRARY_PATH"

# Ensure CMake can find the packages
export CMAKE_PREFIX_PATH="$QT_DIR:$VTK_DIR:$CMAKE_PREFIX_PATH"
